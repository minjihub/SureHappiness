<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="stamp_item"
            type="com.surehappiness.app.activity.stampactivity.adapter.NewStampOnViewAdapter" />
    </data>

    <FrameLayout
        android:id="@+id/item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/stamp_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stamp_circle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/stamp_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorStamp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/stamp_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorStamp"
                android:visibility="gone"/>

        </LinearLayout>

    </FrameLayout>
</layout>